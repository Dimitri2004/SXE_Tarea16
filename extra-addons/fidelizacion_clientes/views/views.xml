      <record model="ir.ui.view" id="fidelizacion_clientes.list">
          <field name="name">fidelizacion_clientes list</field>
          <field name="model">res.partner</field>
          <field name="inherit_id" ref="base.view_partner_tree"/>
          <field name="arch" type="xml">

              <xpath expr="//list/field[@name='complete_name']" position="after">
                  <field name="n_fidelidad" string="Nivel de Fidelidad"/>
              </xpath>
              <xpath expr="//list/field[@name='n_fidelidad']" position="attributes">
                  <attribute name="decoration-info">n_fidelidad in ('Nivel PREMIUM','Nivel GOLD')</attribute>
              </xpath>
          </field>
      </record>
            <record model="ir.ui.view" id="fidelizacion_clientes.kanban">
          <field name="name">fidelizacion_clientes kanban</field>
          <field name="model">res.partner</field>
          <field name="inherit_id" ref="base.res_partner_kanban_view"/>
          <field name="arch" type="xml">

              <xpath expr="//div[@class='mb-1']/field[@name='display_name']" position="after">
                  <br/>
                  <strong><field name="c_socio"/></strong>
              </xpath>
          </field>
      </record>
      <record model="ir.ui.view" id="fidelizacion_clientes.form">
          <field name="name">fidelizacion_clientes form</field>
          <field name="model">res.partner</field>
          <field name="inherit_id" ref="base.view_partner_form"/>
          <field name="arch" type="xml">
              <xpath expr="//notebook" position="inside">
                  <page string="Membresia">
                      <group>
                          <field name="c_socio" string="Codigo de Socio"/>
                          <field name="n_fidelidad" string="Nivel de Fidelidad"/>
                      </group>
                  </page>
              </xpath>
          </field>
      </record>
